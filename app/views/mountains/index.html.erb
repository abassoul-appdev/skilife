<div class="page-header">
  <h1>
    Mountains
    <a href="/mountains/new" class="btn btn-lg btn-success">New Mountain</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>Route photo</th>
        <th>Skier</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @mountains.each do |mountain| %>
      <tr>
        <td><%= mountain.location %></td>
        <td><img src='<%= mountain.route_photo %>' class='img-responsive'></td>
        <td>
          <% if mountain.skier.present? %>
            <a href="/skiers/<%= mountain.skier.id %>">
              <%= mountain.skier.email %>
            </a>
          <% end %>
        </td>
        <td><%= mountain.name %></td>
        <td>
          <a href="/mountains/<%= mountain.id %>" class="btn btn-primary">Show</a>
          
          <% if current_skier == mountain.skier %>
            <a href="/mountains/<%= mountain.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_mountain/<%= mountain.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @mountains, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>