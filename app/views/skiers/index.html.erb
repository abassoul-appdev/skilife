<div class="page-header">
  <h1>
    Skiers
    <a href="/skiers/new" class="btn btn-lg btn-success">New Skier</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Name</th>
        <th>Dob</th>
        <th>Level</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @skiers.each do |skier| %>
      <tr>
        <td><%= skier.email %></td>
        <td><%= skier.password %></td>
        <td><%= skier.name %></td>
        <td><%= skier.dob %></td>
        <td><%= skier.level %></td>
        <td><img src='<%= skier.image %>' class='img-responsive'></td>
        <td>
          <a href="/skiers/<%= skier.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @skiers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
